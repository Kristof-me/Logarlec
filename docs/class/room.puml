class Room {
    - capacity : int

    + split() : void
    + merge(room: Room) : void
    + attack(attacker: Actor): void
    + addEffect(effect: RoomEffect) : void
    
    + enter(actor: Actor) : boolean
    + leave(actor: Actor) : void
    + revive(): boolean
    - isFull() : boolean

    + addItem(item: Item) : void
    + removeItem(item: Item) : Item
    + tick() : void
}

